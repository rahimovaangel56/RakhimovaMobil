<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- =================== АУТЕНТИФИКАЦИЯ =================== -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.rakhimovakp.ui.auth.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_loginFragment_to_catalogFragment"
            app:destination="@id/catalogFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.rakhimovakp.ui.auth.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_registerFragment_to_catalogFragment"
            app:destination="@id/catalogFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>

    <!-- =================== ОСНОВНЫЕ ЭКРАНЫ =================== -->
    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.rakhimovakp.ui.catalog.CatalogFragment"
        android:label="Каталог"
        tools:layout="@layout/fragment_catalog">

        <!-- Действие для оформления заказа (если из деталей авто) -->
        <action
            android:id="@+id/action_catalogFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />

        <!-- Действие в корзину -->
        <action
            android:id="@+id/action_catalogFragment_to_cartFragment"
            app:destination="@id/cartFragment" />

        <!-- Действие для добавления автомобиля -->
        <action
            android:id="@+id/action_catalogFragment_to_addCarFragment"
            app:destination="@id/addCarFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />

    </fragment>

    <!-- ФРАГМЕНТ: Добавление автомобиля -->
    <fragment
        android:id="@+id/addCarFragment"
        android:name="com.example.rakhimovakp.ui.catalog.AddCarFragment"
        android:label="Добавить автомобиль"
        tools:layout="@layout/fragment_add_car">

        <!-- Действие назад в каталог (после добавления) -->
        <action
            android:id="@+id/action_addCarFragment_to_catalogFragment"
            app:destination="@id/catalogFragment"
            app:popUpTo="@id/catalogFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.rakhimovakp.ui.catalog.CartFragment"
        android:label="Корзина"
        tools:layout="@layout/fragment_cart">

        <!-- Действие для оформления заказа из корзины -->
        <action
            android:id="@+id/action_cartFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />

        <!-- Действие назад в каталог -->
        <action
            android:id="@+id/action_cartFragment_to_catalogFragment"
            app:destination="@id/catalogFragment"
            app:popUpTo="@id/cartFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <!-- ФРАГМЕНТ: Оформление заказа -->
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.rakhimovakp.ui.checkout.CheckoutFragment"
        android:label="Оформление заказа"
        tools:layout="@layout/fragment_checkout">

        <!-- ВАЖНО: Аргумент. Используем Long для передачи carId.
             Если нужно передавать весь массив CartItem, это сложнее.
             Рекомендуется передавать ID или ключевые данные. -->
        <argument
            android:name="carId"
            app:argType="long[]"/>

        <!-- Действие назад в каталог после оформления -->
        <action
            android:id="@+id/action_checkoutFragment_to_catalogFragment"
            app:destination="@id/catalogFragment"
            app:popUpTo="@id/catalogFragment"
            app:popUpToInclusive="false" />

        <!-- Действие назад в корзину после оформления -->
        <action
            android:id="@+id/action_checkoutFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:popUpTo="@id/cartFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <!-- НОВЫЙ ФРАГМЕНТ: Аналитика продаж -->
    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.rakhimovakp.ui.analytics.AnalyticsFragment"
        android:label="Аналитика"
        tools:layout="@layout/fragment_analytics">

        <!-- Можно добавить действия, если аналитика открывается из других мест -->
    </fragment>

</navigation>